@model TestApp.Models.Order

<h2>Заказ в режиме чтения</h2>
@using (Html.BeginForm("CreateOrder", "Home"))
{
    <table>
        <tr>
            <tr>
            <th align="left">
                @Html.LabelFor(m=>m.id, "Номер заказа")
            </th>
            <td>
                @Html.DisplayFor(m=>m.id)
            </td>
        </tr>
            <th align="left">
                @Html.LabelFor(m=>m.recipient_city, "Город получателя")
            </th>
            <td>
                @Html.DisplayFor(m=>m.recipient_city)
            </td>
        </tr>
        <tr>
            <th align="left">
                @Html.LabelFor(m=>m.recipient_adress, "Адрес получателя")
            </th>
            <td>
                @Html.DisplayFor(m=>m.recipient_adress)
            </td>
        </tr>
        <tr>
            <th align="left">
                @Html.LabelFor(m=>m.sender_city, "Город отправителя")
            </th>
            <td>
                @Html.DisplayFor(m=>m.sender_city)
            </td>
        </tr>
        <tr>
            <th align="left">
                @Html.LabelFor(m=>m.sender_adress, "Адрес отправителя")
            </th>
            <td>
                @Html.DisplayFor(m=>m.sender_adress)
            </td>
        </tr>
        <tr>
            <th align="left">
                @Html.LabelFor(m=>m.weight, "Вес груза")
            </th>
            <td>
                @Html.DisplayFor(m=>m.weight)
            </td>
        </tr>
        <tr>
            <th align="left">
                @Html.LabelFor(m=>m.pickup_date, "Дата забора груза")
            </th>
            <td>
                @Html.DisplayFor(m=>m.pickup_date)
            </td>
        </tr>
    </table>
}
<p>
    @Html.ActionLink("Посмотреть заказы","ShowOrders")|@Html.ActionLink("Создать заказ","CreateOrder")
</p>
